include ../../title/index
include ../works-form/index
include ../../icon/index
include ../../anchor/index

mixin works-what(options)
    if !options
        - options = {}

    section.b-works-what(class!=attributes.class)
        +title({
            text: "Что обо мне говорят",
            icon: "about"
        })(class="b-works-what__title" tag="h2" mod="what")
        .b-works-what__reviews
            each item in options.reviews
                .b-works-what__reviews-item.b-review
                    .b-review__persona-photo-wr
                        img.b-review__persona-photo(src=item.persona.photo)
                    .b-review__text= item.text
                    .b-review__persona-name= item.persona.name
                    .b-review__persona-post= item.persona.post
        +works-form()(class="b-works-what__form")
        .b-index-card__bottom
            +anchor({
                href: "#section-top"
            })(class="b-works-what-btn-up")
                span.u-sr-only Вверх
                +icon({file: "arrow_down"})(class="b-works-what-up__icon")

