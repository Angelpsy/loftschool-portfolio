include ../menu-base/index

mixin menu-fullscreen(options)
    if !options
        - options = {}

    section.b-menu-fullscreen(class!=attributes.class)
        +menu-base({
            menuItems: options.menuItems,
            menuItemActiveHref: options.menuItemActiveHref,
            menuClass: 'b-menu-fullscreen',
            menuItemClass: 'b-menu-fullscreen-item'
        })
