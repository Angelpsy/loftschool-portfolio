include ../index-header-btn/index

//- options.menu
mixin index-header(options)
    if !options
        - options = {}

    header.b-index-header(class!=attributes.class)
        h1.u-sr-only Сайт портфолио. Алексей Алексеев.
        each item in options.menu
            +index-header-btn({
                link: item
            })(class="b-index-header__btn")
